<Window x:Class="Beep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:beepRuleUI="clr-namespace:Beep.RuleUI"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Beep">
    <!-- SizeToContent="WidthAndHeight" is required to make screen size be exactly as defined below -->

    <Grid Height="480"
          Width="960"
          HorizontalAlignment="Left"
          VerticalAlignment="Top">

        <Canvas Name="canvas"
                Background="LightGreen"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="480"
                Width="593"
                MouseMove="OnMouseMove"
                MouseLeftButtonDown="OnMouseLeftDown"
                MouseLeftButtonUp="OnMouseLeftUp">
        </Canvas>
        <Canvas Height="480"
                Width="367"
                HorizontalAlignment="Right"
                Background="FloralWhite">
            <Menu Height="20"
                  HorizontalAlignment="Right"
                  Name="ControlMenu"
                  VerticalAlignment="Top"
                  Width="367">
                <MenuItem Header="_File"
                          Style="{StaticResource menuParentStyle}"
                          ItemContainerStyle="{DynamicResource MenuItemStyle1}"
                          Template="{DynamicResource MenuItemControlTemplate2}">
                    <MenuItem Header="_Load"
                              Click="BtnLoad_Click" />
                    <MenuItem Header="_Save"
                              Click="BtnSave_Click"/>
                    <MenuItem Header="_Quit" />
                </MenuItem>
                <MenuItem Header="_Edit"
                          Style="{StaticResource menuParentStyle}"
                          ItemContainerStyle="{DynamicResource MenuItemStyle1}"
                          Template="{DynamicResource MenuItemControlTemplate2}">
                    <MenuItem Header="_Size"
                              Style="{StaticResource menuParentStyle}"
                              ItemContainerStyle="{DynamicResource MenuItemStyle1}"
                              Template="{DynamicResource MenuItemControlTemplate2}"
                              >
                        <TextBox x:Name="Width_Beepworld" Width="50"
                                 Height="20"
                                 Text="Width"></TextBox>
                        <TextBox x:Name="Heigth_Beepworld" Width="50"
                                 Height="20"
                                 Text="Heigth"></TextBox>
                        <Button Width="50" Content="Set size"
                                RenderTransformOrigin="-0.06,0.567" Click="BtnSize_Click">
                            
                        </Button>
                        <!--<MenuItem Header="Small"-->
                    </MenuItem>
                               
                    
                </MenuItem>



                <MenuItem Header="_View"
                          Style="{StaticResource menuParentStyle}"
                          ItemContainerStyle="{DynamicResource MenuItemStyle1}"
                          Template="{DynamicResource MenuItemControlTemplate2}">
                    <MenuItem Header="Full Screen" />

                </MenuItem>

                <MenuItem Header="_Add Rule"
                          Style="{StaticResource menuParentStyle}"
                          ItemContainerStyle="{DynamicResource MenuItemStyle1}"
                          Template="{DynamicResource MenuItemControlTemplate2}">
                    <MenuItem Header="Change Color"
                              Click="AddRuleClick" />
                    <MenuItem Header="Change Neighbor Color"
                              Click="AddRuleClick" />
                    <MenuItem Header="Random Change"
                              Click="AddRuleClick" />
                    <MenuItem Header="Virus"
                              Click="AddRuleClick" />
                </MenuItem>
                <MenuItem Header="Style"
                          Style="{StaticResource menuParentStyle}"
                          ItemContainerStyle="{DynamicResource MenuItemStyle1}"
                          Template="{DynamicResource MenuItemControlTemplate2}" />
                



            </Menu>





                <!--<Label Name="lblHeader"
                   Content="Beep Rules"
                   FontSize="18"
                   Canvas.Left="21"
                   Canvas.Top="9"
                   Height="44"
                   Width="171" />-->
            <!--<Button Name="btnNewRule"
                    Content="Add Rule"
                    Canvas.Left="226"
                    Canvas.Top="13"
                    Click="BtnNewRuleClick"
                    Margin="0"
                    ContextMenuService.IsEnabled="False">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Change Color"
                                  Click="AddRuleClick" />
                        <MenuItem Header="Change Neighbor Color"
                                  Click="AddRuleClick" />
                        <MenuItem Header="Random Change"
                                  Click="AddRuleClick" />
                        <MenuItem Header="Virus"
                                  Click="AddRuleClick" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>-->
            <!--<Button Name="btnBeepSize"
                    Content="Size"
                    Canvas.Left="320"
                    Canvas.Top="13"
                    Width="36"
                    Margin="0"
                    Click="btnBeepSize_Click" />-->

            <ScrollViewer FlowDirection="RightToLeft"
                          CanContentScroll="False"
                          VerticalScrollBarVisibility="Auto"
                          Height="240"
                          Canvas.Left="2"
                          Canvas.Top="58"
                          Width="363">
                
                <ListBox Name="lbRules"
                         FlowDirection="LeftToRight"
                         Background="WhiteSmoke"
                         ItemsSource="{Binding BeepRulesUIComponents}">
                    <!-- ItemsSource="{Binding}"> -->

                    <!--
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <beepRuleUI:ChangeNeighborColorUserControl /> 
                    </DataTemplate>
                </ListBox.ItemTemplate> -->
                    <ListBox.ItemContainerStyle>
                        <Style>
                            <Setter Property="ListBoxItem.AllowDrop"
                                    Value="True" />
                            <EventSetter Event="ListBoxItem.PreviewMouseMove"
                                         Handler="ListBoxPreviewMouseMoved" />
                            <EventSetter Event="ListBoxItem.Drop"
                                         Handler="ListBoxRuleDropped" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </ScrollViewer>

            <!--<Button Name="BtnSave"
                    Content="Save Painting"
                    HorizontalAlignment="Center"
                    Canvas.Left="30"
                    Canvas.Top="446"
                    Margin="0"
                    Click="BtnSave_Click"></Button>
            <Button Name="BtnLoad"
                    Content="Load Painting"
                    HorizontalAlignment="Center"
                    Canvas.Left="30"
                    Canvas.Top="413"
                    Margin="0"
                    Click="BtnLoad_Click">-->
            <!--</Button>-->
            <Button Name="BtnClear"
                    Content="Clear"
                    HorizontalAlignment="Center"
                    Canvas.Left="142"
                    Margin="0"
                    Canvas.Top="405"
                    Click="BtnClearClick">

            </Button>
            <Button Canvas.Left="142"
                    Margin="0"
                    Canvas.Top="317">
                <xctk:ColorPicker Name="clrPickMouse"
                                  Height="20"
                                  Width="35"
                                  Padding="0,0,0,1"
                                  BorderThickness="0"
                                  DisplayColorAndName="False"
                                  AvailableColorsHeader="Canvas Colors"
                                  ShowStandardColors="True"
                                  SelectedColorChanged="MouseColorChanged"
                                  StandardColors="{Binding StandardColorItems, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Mode=OneWay}"
                                  Canvas.Left="173"
                                  Canvas.Top="324"
                                  ShowDropDownButton="False"
                                  AdvancedButtonHeader="Specify"
                                  SelectedColor="Orange" />
            </Button>



            <Button Name="btnPaint"
                    Content="Paint"
                    HorizontalAlignment="Center"
                    Canvas.Top="364"
                    Click="BtnPaintClick"
                    RenderTransformOrigin="3.744,0.76"
                    Canvas.Left="142"
                    Margin="0" />
            <xctk:IntegerUpDown Name="iudAmountPicker1"
                                Height="30"
                                Width="70"
                                FontSize="16"
                                Value="1"
                                Maximum="100"
                                Minimum="1"
                                Padding="0,0,9,0"
                                VerticalAlignment="Center"
                                ValueChanged="AmountChanged"
                                Canvas.Left="241"
                                Canvas.Top="369"
                                RenderTransformOrigin="4.307,11.068" />

            <TextBox Name="MouseText"
                     Canvas.Left="297"
                     Canvas.Top="448"
                     TextWrapping="NoWrap"
                     Text="TextBox" />
            <TextBox x:Name="MouseTextCopy"
                     TextWrapping="NoWrap"
                     Text="TextBox"
                     Canvas.Left="297"
                     Canvas.Top="425" />

        </Canvas>
    </Grid>

</Window>
    
