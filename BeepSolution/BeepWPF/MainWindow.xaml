<Window x:Class="Beep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beep"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Beep"
        >
    <!-- SizeToContent="WidthAndHeight" is required to make screen size be exactly as defined below -->
    
    <Grid
        Height="400" Width="550"
        >
        <Canvas
            Name="canvas"
            Background="#FF080F37"
            HorizontalAlignment="Left"  VerticalAlignment="Top"
            Height="400" Width="400"
            MouseMove="OnMouseMove"
            MouseLeftButtonDown="OnMouseLeftClick"
            >
        </Canvas>
        <Canvas
            Height="400" Width="150"  HorizontalAlignment="Right"
            Background="FloralWhite"
            >
            <TextBox 
            Name="MouseText" 
            Canvas.Left="77" Canvas.Top="357"
            TextWrapping="NoWrap"  Text="TextBox"
                />
            <TextBox 
            x:Name="MouseTextCopy"
            TextWrapping="NoWrap"  Text="TextBox" Canvas.Left="77" Canvas.Top="334"
                />
            <Button Content="Colour Neighbors" Canvas.Left="49" Canvas.Top="51" Width="80" Click="Button_Click" Height="59"/>
            <Button Content="Color Tiles" Canvas.Left="49" Canvas.Top="115" Width="80" Height="53" Click="Button_Click_1"/>

        </Canvas>
    </Grid>
</Window>
