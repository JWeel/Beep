<Window x:Class="Beep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beep"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Beep"
        >
    <!-- SizeToContent="WidthAndHeight" is required to make screen size be exactly as defined below -->

    <Grid
        Height="400" Width="550"
        >
        <Canvas
            Name="canvas"
            Background="#FF080F37"
            HorizontalAlignment="Left"  VerticalAlignment="Top"
            Height="400" Width="400"
            MouseMove="OnMouseMove"
            MouseLeftButtonDown="OnMouseLeftClick"
            >
        </Canvas>
        <Canvas
            Height="400" Width="150"  HorizontalAlignment="Right"
            Background="FloralWhite"
            >
            <TextBox 
            Name="MouseText" 
            Canvas.Left="77" Canvas.Top="357"
            TextWrapping="NoWrap"  Text="TextBox"
                />
            <TextBox 
            x:Name="MouseTextCopy"
            TextWrapping="NoWrap"  Text="TextBox" Canvas.Left="77" Canvas.Top="334"
                />
            <Button 
                Name="btnRefresh"
                Content="Refresh" Canvas.Left="48" Canvas.Top="64" Width="40" Click="btnRefresh_Click"
                    />
            <Button x:Name="btnColourNeighbours" Content="Colour Neighbors" Canvas.Left="43" Canvas.Top="256" Width="97" Click="btnColourNeighbours" Height="26"/>
            <Button x:Name="btnRandomize" Content="Randomize" Canvas.Left="50" Canvas.Top="287" Width="73" Height="21" Click="btnRandomizeClick"/>

        </Canvas>
    </Grid>
</Window>
