                </Button.ContextMenu>
            </Button>-->
            <!--<Button Name="btnBeepSize"
                    Content="Size"
                    Canvas.Left="320"
                    Canvas.Top="13"
                    Width="36"
                    Margin="0"
                    Click="btnBeepSize_Click" />-->

            <ListBox Name="lbRules"
                     Height="240"
                     Canvas.Left="2"
                     Canvas.Top="58"
                     Width="363"
                     Background="WhiteSmoke"
                     ItemsSource="{Binding BeepRulesUIComponents}">
                <!-- ItemsSource="{Binding}"> -->

                <!--
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <beepRuleUI:ChangeNeighborColorUserControl /> 
                    </DataTemplate>
                </ListBox.ItemTemplate> -->
                <ListBox.ItemContainerStyle>
                    <Style>
                        <Setter Property="ListBoxItem.AllowDrop"
                                Value="True" />
                        <EventSetter Event="ListBoxItem.PreviewMouseMove"
                                     Handler="ListBoxPreviewMouseMoved" />
                        <EventSetter Event="ListBoxItem.Drop"
                                     Handler="ListBoxRuleDropped" />
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <!--<Button Name="BtnSave"
                    Content="Save Painting"
                    HorizontalAlignment="Center"
                    Canvas.Left="30"
                    Canvas.Top="446"
                    Margin="0"
                    Click="BtnSave_Click"></Button>
            <Button Name="BtnLoad"
                    Content="Load Painting"
                    HorizontalAlignment="Center"
                    Canvas.Left="30"
                    Canvas.Top="413"
                    Margin="0"
                    Click="BtnLoad_Click">-->
            <!--</Button>-->
            <Button Name="BtnClear"
                    Content="Clear"
                    HorizontalAlignment="Center"
                    Canvas.Left="142"
                    Margin="0"
                    Canvas.Top="405"
                    Click="BtnClearClick">

            </Button>
            <Button Canvas.Left="142"
                    Margin="0"
                    Canvas.Top="317">
                <xctk:ColorPicker Name="clrPickMouse"
                                  Height="20"
                                  Width="35"
                                  Padding="0,0,0,1"
                                  BorderThickness="0"
                                  DisplayColorAndName="False"
                                  ShowStandardColors="False"
                                  SelectedColorChanged="MouseColorChanged"
                                  Canvas.Left="173"
                                  Canvas.Top="324" />
            </Button>



            <Button Name="btnPaint"
                    Content="Paint"
                    HorizontalAlignment="Center"
                    Canvas.Top="364"
                    Click="BtnPaintClick"
                    RenderTransformOrigin="3.744,0.76"
                    Canvas.Left="142"
                    Margin="0" />
            <xctk:IntegerUpDown Name="iudAmountPicker1"
                                Height="30"
                                Width="70"
                                FontSize="16"
                                Value="1"
                                Maximum="100"
                                Minimum="1"
                                Padding="0,0,9,0"
                                VerticalAlignment="Center"
                                ValueChanged="AmountChanged"
                                Canvas.Left="241"
                                Canvas.Top="369"
                                RenderTransformOrigin="4.307,11.068" />

            <TextBox Name="MouseText"
                     Canvas.Left="297"
                     Canvas.Top="448"
                     TextWrapping="NoWrap"
                     Text="TextBox" />
            <TextBox x:Name="MouseTextCopy"
                     TextWrapping="NoWrap"
                     Text="TextBox"
                     Canvas.Left="297"
                     Canvas.Top="425" />

        </Canvas>
    </Grid>

</Window>
    
