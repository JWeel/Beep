<Window x:Class="Beep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:beep="clr-namespace:BeepLibrary.RuleTemplates;assembly=BeepLibrary"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Beep">
    <!-- SizeToContent="WidthAndHeight" is required to make screen size be exactly as defined below -->

    <Grid Height="480"
          Width="960"
          HorizontalAlignment="Left"
          VerticalAlignment="Top">


        <Canvas Name="canvas"
                Background="#FF080F37"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="480"
                Width="593"
                MouseMove="OnMouseMove"
                MouseLeftButtonDown="OnMouseLeftClick">
        </Canvas>
        <Canvas Height="480"
                Width="367"
                HorizontalAlignment="Right"
                Background="FloralWhite">


            <Label Name="lblHeader"
                   Content="Beep Rules"
                   FontSize="18"
                   Canvas.Left="21"
                   Canvas.Top="9"
                   Height="44"
                   Width="171" />
            <Button Name="btnNewRule"
                    Content="Add Rule"
                    Canvas.Left="226"
                    Canvas.Top="13"
                    Click="BtnNewRuleClick"
                    Margin="0" />

            <ListBox Name="lbRules"
                     Height="240"
                     Canvas.Left="2"
                     Canvas.Top="58"
                     Width="363"
                     Background="WhiteSmoke"
                     ItemsSource="{Binding}">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <beep:ChangeNeighbor>
                        </beep:ChangeNeighbor>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Name="BtnSave"
                    Content="Save Painting"
                    HorizontalAlignment="Center"
                    Canvas.Left="30"
                    Canvas.Top="446"
                    Margin="0"></Button>
            <Button Name="BtnLoad"
                    Content="Load Painting"
                    HorizontalAlignment="Center"
                    Canvas.Left="30"
                    Canvas.Top="413"
                    Margin="0">
            </Button>


            <Button Name="btnPaint"
                    Content="Paint"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Canvas.Top="364"
                    Click="BtnPaintClick"
                    RenderTransformOrigin="3.744,0.76"
                    Canvas.Left="142"
                    Margin="0" />
            <TextBox Name="IterationText"
                     Text="Iteration"
                     TextWrapping="NoWrap"
                     Canvas.Left="226"
                     Canvas.Top="376"></TextBox>
            <TextBox Name="MouseText"
                     Canvas.Left="297"
                     Canvas.Top="448"
                     TextWrapping="NoWrap"
                     Text="TextBox" />
            <TextBox x:Name="MouseTextCopy"
                     TextWrapping="NoWrap"
                     Text="TextBox"
                     Canvas.Left="297"
                     Canvas.Top="425" />

        </Canvas>
    </Grid>

</Window>
    
