<Window x:Class="Beep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beep"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="MainWindow"
        MouseMove="OnMouseMove"
        >
    <Grid
        Height="400" Width="550"
        >
        <Canvas
            Name="canvas"
            Background="#FFEFF0E1"
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Height="400" Width="400"
            >
        </Canvas>
        <TextBox Name="MouseText" Canvas.Left="20" TextWrapping="Wrap" Text="TextBox" Canvas.Top="20" Margin="11,270,229,10"/>
        <Canvas
            Height="400" Width="150" HorizontalAlignment="Right"
            ></Canvas>
    </Grid>
</Window>
