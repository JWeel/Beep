<Window x:Class="Beep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:beep="clr-namespace:Beep.RuleTemplates;assembly=BeepLibrary"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Beep">
    <!-- SizeToContent="WidthAndHeight" is required to make screen size be exactly as defined below -->

    <Grid Height="480"
          Width="960"
          HorizontalAlignment="Left"
          VerticalAlignment="Top">


        <Canvas Name="canvas"
                Background="#FF080F37"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="480"
                Width="593"
                MouseMove="OnMouseMove"
                MouseLeftButtonDown="OnMouseLeftClick">
        </Canvas>
        <Canvas Height="480"
                Width="367"
                HorizontalAlignment="Right"
                Background="FloralWhite">
            <Canvas.Resources>
                <LinearGradientBrush x:Key="GrayBlueGradientBrush"
                                     StartPoint="0,0"
                                     EndPoint="1,1">
                    <GradientStop Color="#8F77B5"
                                  Offset="0" />
                    <GradientStop Color="DarkSeaGreen"
                                  Offset="0.5" />
                    <GradientStop Color="DarkBlue"
                                  Offset="1" />

                </LinearGradientBrush>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background"
                            Value="{StaticResource GrayBlueGradientBrush}" />

                    <Setter Property="Width"
                            Value="40"></Setter>
                    <Setter Property="Height"
                            Value="20"></Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid Width="{TemplateBinding Width}"
                                      Height="{TemplateBinding Height}"
                                      ClipToBounds="True">
                                    <Rectangle x:Name="outerRectangle"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Stretch"
                                               Stroke="{TemplateBinding Background}"
                                               RadiusX="10"
                                               RadiusY="20"
                                               StrokeThickness="1"
                                               Fill="Azure" />
                                    <Rectangle x:Name="innerRectangle"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Stretch"
                                               Stroke="Transparent"
                                               RadiusX="10"
                                               RadiusY="20"
                                               StrokeThickness="1"
                                               Fill="{TemplateBinding Background}" />
                                    <DockPanel Name="myContentPresenterDockPanel">
                                        <ContentPresenter x:Name="myContentPresenter"
                                                          Margin="20"
                                                          Content="{TemplateBinding Content}"
                                                          TextBlock.Foreground="Black" />

                                    </DockPanel>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </Canvas.Resources>

            <Label Name="lblHeader"
                   Content="Beep Rules"
                   FontSize="18"
                   Canvas.Left="21"
                   Canvas.Top="9"
                   Height="44"
                   Width="171" />
            <Button Name="btnNewRule"
                    Content="Add Rule"
                    Canvas.Left="297"
                    Canvas.Top="13"
                    Click="BtnNewRuleClick" />

            <ListBox Name="lbRules"
                     Height="240"
                     Canvas.Left="2"
                     Canvas.Top="58"
                     Width="363"
                     Background="WhiteSmoke"
                     ItemsSource="{Binding}">

                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type beep:ChangeNeighbor}" >
                        <beep:ChangeNeighbor>
                        </beep:ChangeNeighbor>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Name="Generate"
                    Content="Generate"
                    Canvas.Left="160"
                    Canvas.Top="370"
                    RenderTransformOrigin="0.64,0.98">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Stroke="Black"
                                     StrokeThickness="1">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Offset="0"
                                                      Color="#66327C" />
                                        <GradientStop Offset="1"
                                                      Color="#6699A1" />
                                        <GradientStop Offset="1"
                                                      Color="DarkBlue" />
                                        <RadialGradientBrush.Transform>
                                            <TransformGroup>
                                                <ScaleTransform ScaleY="0.60" />

                                            </TransformGroup>
                                        </RadialGradientBrush.Transform>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>


            <Button Name="btnPaint"
                    Content="Paint"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Canvas.Top="325"
                    Click="BtnPaintClick"
                    RenderTransformOrigin="3.744,0.76"
                    Canvas.Left="251" />

            <Button Name="btnSave"
                    Content="Save"
                    Canvas.Left="48"
                    Canvas.Top="448"
                     />
            <Button Name="btnLoad"
                    Content="Load"
                    Canvas.Left="124"
                    Canvas.Top="450"
                    />

            <TextBox Name="MouseText"
                     Canvas.Left="297"
                     Canvas.Top="448"
                     TextWrapping="NoWrap"
                     Text="TextBox" />
            <TextBox x:Name="MouseTextCopy"
                     TextWrapping="NoWrap"
                     Text="TextBox"
                     Canvas.Left="297"
                     Canvas.Top="425" />

        </Canvas>
    </Grid>

</Window>
    
