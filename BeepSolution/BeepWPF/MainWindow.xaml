<Window x:Class="Beep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:beepRuleUI="clr-namespace:Beep.RuleUI"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Beep">
    <!-- SizeToContent="WidthAndHeight" is required to make screen size be exactly as defined below -->

    <Grid Height="480"
          Width="960"
          HorizontalAlignment="Left"
          VerticalAlignment="Top">

        <Canvas Name="canvas"
                Background="LightGreen"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="480"
                Width="593"
                MouseMove="OnMouseMove"
                MouseLeftButtonDown="OnMouseLeftClick">
        </Canvas>
        <Canvas Height="480"
                Width="367"
                HorizontalAlignment="Right"
                Background="FloralWhite">
            <Menu Height="20"
                  HorizontalAlignment="Right"
                  Name="ControlMenu"
                  VerticalAlignment="Top"
                  Width="367">
                <MenuItem Header="_File"
                          Style="{StaticResource menuParentStyle}"
                          ItemContainerStyle="{DynamicResource MenuItemStyle1}"
                          Template="{DynamicResource MenuItemControlTemplate2}">
                    <MenuItem Header="_Load"
                              Click="BtnLoad_Click" />
                    <MenuItem Header="_Save"
                              Click="BtnSave_Click"/>
                    <MenuItem Header="_Quit" />
                </MenuItem>
                <MenuItem Header="_Edit"
                          Style="{StaticResource menuParentStyle}"
                          ItemContainerStyle="{DynamicResource MenuItemStyle1}"
                          Template="{DynamicResource MenuItemControlTemplate2}">
                    <MenuItem Header="_Size">
                        <!--<MenuItem Header="Small"-->
                    </MenuItem>
                               
                    
                </MenuItem>



                <MenuItem Header="_View"
                          Style="{StaticResource menuParentStyle}"
                          ItemContainerStyle="{DynamicResource MenuItemStyle1}"
                          Template="{DynamicResource MenuItemControlTemplate2}">
                    <MenuItem Header="Full Screen" />

                </MenuItem>

                <MenuItem Header="_Add Rule"
                          Style="{StaticResource menuParentStyle}"
                          ItemContainerStyle="{DynamicResource MenuItemStyle1}"
                          Template="{DynamicResource MenuItemControlTemplate2}">
                    <MenuItem Header="Change Color"
                              Click="AddRuleClick" />
                    <MenuItem Header="Change Neighbor Color"
                              Click="AddRuleClick" />
                    <MenuItem Header="Random Change"
                              Click="AddRuleClick" />
                    <MenuItem Header="Virus"
                              Click="AddRuleClick" />
                </MenuItem>
                <MenuItem Header="Style"
                          Style="{StaticResource menuParentStyle}"
                          ItemContainerStyle="{DynamicResource MenuItemStyle1}"
                          Template="{DynamicResource MenuItemControlTemplate2}" />
                



            </Menu>





                <!--<Label Name="lblHeader"
                   Content="Beep Rules"
                   FontSize="18"
                   Canvas.Left="21"
                   Canvas.Top="9"
                   Height="44"
                   Width="171" />-->
